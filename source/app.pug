                                    span.playoffplayer(seed="2",player="") Bye
                            .col-4
                                p.semi(game='As2')
                                    span.playoffplayer(winner="Aq3",player="Aq3") Q3
                                    span  vs 
                                    span.playoffplayer(winner="Aq4",player="Aq4") Q4
                            .col-4
