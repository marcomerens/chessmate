        .someblock
            .badge.text-bg-secondary.masterblock(style='display:none;text-align:center')
                span.fieldblock.someplayer(name="player1",status="") Marco 
                span  
                i.fas.fa-play-circle.launcher(style='display:none')
                i.fas.fa-minus.planned
                i.fas.fa-check-circle.apply(style='display:none')
                span  
                span.fieldblock.someplayer(name="player2",status="")  Paul
                br
                span(style='font-size:8px;font-style:italic')
                    span Div. 
                    span.fieldblock(name="division") A
                    span  
                    span.fieldblock(name="phase") Group 1
    .somemaster
        .somemaster
            .col-4.gameblock.masterblockold(style="display:none;padding:5px")
                .card
                    .card-body
                        .row
                            .col-6
                                div
                                    span Div. 
                                    span.fieldblock(name="division") A
                                    br
                                    span Group 
                                    span.fieldblock(name="group") 1
                                    br
                                    span.fieldblock(name="phase") Qualifiers
                                    
                            .col-6
                                div
                                    i.player1dot.playerdot.fas.fa-circle(player="player1",status="")
                                    strong  
                                    strong.fieldblock(name="player1")  Marco
                                    br
                                    span.text-center vs 
                                    i.fas.fa-check-circle.apply(style="color:lightgray;display:none",disabled)
                                    i.fas.fa-play-circle.launcher(style="color:blue;display:none",disabled)
                                    
                                    br
                                    i.player2dot.playerdot.fas.fa-circle(player="player2",status="")
                                    strong  
                                    strong.fieldblock(name="player2")  Mats
                    .card-footer.text-bg-light.text-center
                        span.fieldblock(name="result") Marco wins

