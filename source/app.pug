        .col-3.standings(division="A",style="display:none")
            .card
                .card-header
                    h5 Div A - New to chess
                .card-body
                    p.message.text-center QUALIFIERS
                    p.text-center.launchplayoffs(style='display:none'): button.btn.btn-sm.btn-info Launch 
                        i.fas.fa-play-circle
                    .gameblocks(phase="active",division="A")
                    .playoffs(style="display:none")
                        .row(style='font-size:10px;text-align:center')
                            .col-4
                                p Quarter
                            .col-4
                                p Semi-finals
                            .col-4
